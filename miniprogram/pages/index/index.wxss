/**index.wxss**/
.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  z-index: -1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  opacity: 0.5;

}

.usermotto {
  margin-top: 200px;
}

.roomid {
  width: 80%;
  height: 80rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  margin-left: 10%;
  font-size: 30rpx; 
  text-align: left;
  border-bottom: 1rpx solid #D3D3D3;
  background-color: white;
  opacity: 0.5;
  border-radius: 30rem; 
  color: black;
}

.enterbtn {
  margin-top: 30rpx; 
  height: 80rpx;
  width: 50%;
  margin-bottom: 30rpx;
  line-height: 80rpx;
  border: none;
  font-size: 35rpx;
  /* color:rgba(0,0,0,0.7); */
  /* -webkit-background-clip: border-box; */
  background-color: white;
  border-radius: 30rem;
  opacity: 0.9;
}

.loginPanel {
  margin-top: 50rpx; 
  width: 80%;
  height: 60%;
  text-align: center;
}